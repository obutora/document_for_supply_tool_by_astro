---
import OpenButton from "../components/menu/OpenButton";

export interface Props {
  title: string;
}

const { frontmatter } = Astro.props;
const posts = await Astro.glob("../pages/supplyTools/*/*.mdx");
const subPosts = await Astro.glob("../pages/supplyTools/*/*/*.mdx");
